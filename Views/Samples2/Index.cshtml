@*@model IEnumerable<Fag_el_Gamous.Models.Samples2>*@
@using Fag_el_Gamous.Models.ViewModels

@model PaginationViewModel

@{
    ViewData["Title"] = "Detailed Sample Data";
    ViewBag.pageType = "profile-page";
    ViewBag.Background = "/img/tomb.png";
}



<div id="accordion">
    @*Filter accordion*@
    <div class="card bg-light">
        <div class="text-black" id="headingOne">
            <h5 class="mb-0">
                <button class="btn btn-link collapsed" style="color:black" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                    Filters
                </button>
            </h5>
        </div>

        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
            <div class="card-body" style="column-count:2">
                <div style="color:black">
                    <partial name="FilterSampleSummary" model="Model.FilterSample" />
                </div>
            </div>
        </div>
    </div>
</div>



<div page-info="@Model.PageNumberingInfo"
     page-classes-enabled="true"
     page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     page-parameters="@Model.UrlInfo"
     class="btn-group-sm pull-right m-1">
</div>

@if (ViewData["isAdmin"] is true || ViewData["isResearcher"] is true)
{
    <a style="float:right" asp-action="Create">New Record <span class="material-icons">note_add</span></a>
}
else
{
    <span style="float:right">New Record <span rel="tooltip" data-placement="bottom" data-original-title="Only Admins and Researchers can Create Records" class="material-icons">note_add</span></span>
}
<br />
<br />



<div class="table-responsive-xl">
    <table class="table" id="table">
        <thead>
            <tr>
                <th></th>
                <th>
                    Location
                </th>
                <th>
                    Rack #
                </th>
                <th>
                    Sub Burial #
                </th>
                <th>
                    Year
                </th>
                <th>
                    Notes
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Samples)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.SampleId"><span class="material-icons">file_present</span> </a>
                    </td>
                    <td>
                        @if ((item.LowNs == null && item.LowEw == null) || item.LocConcat == "#VALUE!" || item.LocConcat == "#REF!" || item.LocConcat == "null")
                        {
                            @Html.Raw("No Coordinates<br/>Sample ID:") @item.SampleId

                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.LocConcat)
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RackNum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubBurialNum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateYear)
                    </td>
                    <td>
                        @item.Notes

                    </td>
                    <td>
                        @if (ViewData["isAdmin"] is true || ViewData["isResearcher"] is true)
                        {
                            <a asp-action="Edit" asp-route-id="@item.SampleId"><span class="material-icons">edit</span></a>
                        }
                        else
                        {
                            <span rel="tooltip" data-placement="bottom" data-original-title="Only Admins and Researchers can Edit Records" class="material-icons">edit</span>
                        }
                    </td>
                    <td>
                        @if (ViewData["isAdmin"] is true)
                        {
                            <a asp-action="Delete" asp-route-id="@item.SampleId"><span class="material-icons">delete_forever</span></a>

                        }
                        else
                        {
                            <span rel="tooltip" data-placement="bottom" data-original-title="Only Admins can Delete Records" class="material-icons">delete_forever</span>
                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

<div page-info="@Model.PageNumberingInfo"
     page-classes-enabled="true"
     page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     class="btn-group-sm pull-right m-1">

</div>

@section scripts {
    <script>

        $(document).ready(function () {

            $('#table').DataTable({
                //buttons: ['searchPanes',],
                //dom: 'B<"row mt-3"<"col-lg-6"l><"col-lg-6"f>>rtip',
                dom: 'Pfrtip',
                columnDefs: [
                    {
                        searchPanes: {
                            show: true

                        },
                        targets: [1, 2, 4, 5],
                    },
                    {
                        "searchable": false,
                        "orderable": false,
                        targets: [0, 6, 7],
                    },
                    {
                        "className": "text-left",
                        "targets": 5

                    },

                ],


            });

        });



    </script>
}