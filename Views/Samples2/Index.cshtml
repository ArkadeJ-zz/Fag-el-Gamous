                //dom: 'Pfrtip',
                columnDefs: [
                    {
                        searchPanes: {
                            show: true

                        },
                        targets: [1, 2, 4, 5],
                    },
                    {
                        "searchable": false,
                        "orderable": false,
                        targets: [1, 2, 7, 8],
                    },
                    {
                        "className": "text-left",
                        "targets": 5

