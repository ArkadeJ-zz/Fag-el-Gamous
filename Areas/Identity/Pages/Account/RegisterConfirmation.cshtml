@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
    ViewBag.pageType = "profile-page";
    ViewBag.Background = "/img/tent.jpg";
}


@{
    if (@Model.DisplayConfirmAccountLink)
    {
    <h5>Some last details before we set up your account:</h5>
 <hr>
    
        <p>Once your account is created, you will be able to view your own User Profile at any time by clicking on your Username that will appear above. From there, you may edit you account date, or even set up two-factor authentication. </p>
  
    <a style="font-weight:bold" id="confirm-link" href="@Model.EmailConfirmationUrl">Click here to confirm your account!</a>

    }
    else
    {
<p>
        Please check your email to confirm your account.
</p>
    }
}
